<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/project_user_user_select_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="@string/user_user"
            />

        <TextView
            android:id="@+id/project_name_user_select_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:gravity="start"
            android:textSize="16sp"
            android:text="@string/user_name"
            />

        <TextView
            android:id="@+id/project_type_user_select_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:gravity="start"
            android:textSize="16sp"
            android:text="@string/participant_type"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/project_select_type_0_button_user_item"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/project_select_type_1_button_user_item"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                />

            <Button
                android:id="@+id/project_select_type_1_button_user_item"
                app:layout_constraintStart_toEndOf="@id/project_select_type_0_button_user_item"
                app:layout_constraintEnd_toStartOf="@id/project_select_type_2_button_user_item"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                />

            <Button
                android:id="@+id/project_select_type_2_button_user_item"
                app:layout_constraintStart_toEndOf="@id/project_select_type_1_button_user_item"
                app:layout_constraintEnd_toStartOf="@id/project_select_type_del_button_user_item"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admn"
                />

            <Button
                android:id="@+id/project_select_type_del_button_user_item"
                app:layout_constraintStart_toEndOf="@id/project_select_type_2_button_user_item"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Del"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</LinearLayout>