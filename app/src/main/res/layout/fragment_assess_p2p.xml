<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.project.assess.p2p.P2PFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/text_project"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:textColor="@color/option_a"
                android:text="@string/project_name"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="20sp"
                />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_indicator"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_seekbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="13"
            android:orientation="vertical"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/text_option_a"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/option_a"
                    android:text="@string/fundamental_scale_option_a"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="20sp"
                    android:textStyle="italic"
                    android:textAllCaps="true"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/option_a1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_empty"
                        android:padding="2dp"
                        />

                    <ImageView
                        android:id="@+id/option_a2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_empty"
                        android:padding="2dp"
                        />

                    <ImageView
                        android:id="@+id/option_a3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_empty"
                        android:padding="2dp"
                        />

                    <ImageView
                        android:id="@+id/option_a4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_empty"
                        android:padding="2dp"
                        />

                </LinearLayout>

            </LinearLayout>

            <SeekBar
                android:id="@+id/seek_bar_assess"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:rotation="90"
                android:progress="4"
                android:thumb="@drawable/seekbar_thumb"
                android:progressDrawable="@drawable/seekbar_color"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/text_option_b"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/option_b"
                    android:text="@string/fundamental_scale_option_b"
                    android:textSize="20sp"
                    android:padding="2dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="20sp"
                    android:textStyle="italic"
                    android:textAllCaps="true"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/option_b1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_empty"
                        android:padding="2dp"
                        />

                    <ImageView
                        android:id="@+id/option_b2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_empty"
                        android:padding="2dp"
                        />

                    <ImageView
                        android:id="@+id/option_b3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_empty"
                        android:padding="2dp"
                        />

                    <ImageView
                        android:id="@+id/option_b4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_empty"
                        android:padding="2dp"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1.5"
            >

            <Button
                android:id="@+id/assess_button_save_n_exit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:backgroundTint="@color/red"
                android:contentDescription="@string/button_savenexit"
                android:drawableLeft="@drawable/ic_save"
                android:drawableRight="@drawable/ic_exit"
                android:layout_marginEnd="16dp"
                />

            <Button
                android:id="@+id/assess_button_next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/button_next"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_assess_thing_thing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="italic"
        />

</androidx.constraintlayout.widget.ConstraintLayout>